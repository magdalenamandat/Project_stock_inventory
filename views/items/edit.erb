<form method="post" action="/items/<%= @item.id %>">
  <div>
  <label for="Item-name-field"> Name:</label>
  <input
  type="text"
  name="name"
  id="Item-name-field"
  value="<%= @item.name %>"
  />
  </div>

<div>
  <label for="manufacturer_name">Manufacturer</label>
  <select name="manufacturer_id" id="manufacturer_name">
        <% @manufacturers.each do |manufacturer| %>
          <% if manufacturer.id == @item.manufacturer_id %>
            <option value="<%= manufacturer.id %>" selected = "selected"><%= manufacturer.name %></option>
          <% else %>
            <option value="<%= manufacturer.id %>"><%= manufacturer.name %></option>
          <% end %>
        <% end %>
      </select>
</div>

<div>
  <label for="group_name">Group</label>
  <select name="group_id" id="group_name">
        <% @groups.each do |group| %>
          <% if group.id == @item.group_id %>
            <option value="<%= group.id %>" selected = "selected"><%= group.name %></option>
          <% else %>
            <option value="<%= group.id %>"><%= group.name %></option>
          <% end %>
        <% end %>
      </select>
</div>

<div>
  <label for="price">Price</label>
  <input type="number" step="0.1" min="0.1" name="price" id="price" value="<%= @item.price %>"/>
</div>

<div>
  <label for="sell_price">Sell price</label>
  <input type="number" step="0.1" min="0.1" name="sell_price" id="sell_price" value="<%= @item.sell_price %>"/>
</div>

<div>
  <label for="quantity">Quantity</label>
  <input type="number" name="quantity" id="quantity" value="<%= @item.quantity %>"/>
</div>


<div>
  <input type="Submit" value="Save"/>
</div>
