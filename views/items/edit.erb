<form method="post" action="/items/<%= @item.id %>">
  <div>
  <label for="Item-name-field"> Name:</label>
  <input
  type="text"
  name="name"
  id="name-field"
  value="<%= @item.name %>"
  />
  </div>

<div>
  <label for="manufacturer_name">Manufacturer</label>
  <input type="text" name="name" id="manufacturer_name" value="<%= @item.manufacturer.name %>"/>
</div>

<div>
  <label for="group_name">Group</label>
  <input type="text" name="name" id="group_name" value="<%= @item.group.name %>"/>
</div>

<div>
  <label for="price">Price</label>
  <input type="number" name="price" id="price" value="<%= @item.price %>"/>
</div>

<div>
  <label for="sell_price">Sell price</label>
  <input type="number" name="sell_price" id="sell_price" value="<%= @item.sell_price %>"/>
</div>

<div>
  <label for="quantity">Quantity</label>
  <input type="number" name="quantity" id="quantity" value="<%= @item.quantity %>"/>
</div>


<div>
  <input type="Submit" value="Save"/>
</div>
